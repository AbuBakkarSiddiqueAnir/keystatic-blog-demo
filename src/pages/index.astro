---
import { getCollection } from 'astro:content';

import Page from "../layouts/Page.astro";
import BlogCard from '../components/card/BlogCard.astro';
const posts = await getCollection('posts')
---

<Page>
<section class="flex mb-24">
	<div class="h-auto flex items-center">
		<h1 class="text-5xl tracking-[0.05em]">
			The blog is made with KeyStatic and Astro
		</h1>
	</div>
	<div class=" max-w-[60%]">
		<img src="/hero-keystatic-editor.webp" alt="hero keystatic editor" width="100%" height='100%'>
	</div>
</section>
<section class="w-full" >
	<h2 class="text-3xl font-semibold text-center underline">Recent Posts</h2>
	<div class="flex flex-col gap-6">
		{
			posts.map((post, index) => <a href={`posts/${post.slug}`}><BlogCard {post} {index}/></a> )
		}
	</div>
</section>
</Page>
